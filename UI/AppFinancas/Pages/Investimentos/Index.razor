@page "/investimento"
@using AppFinancas.Models
@rendermode InteractiveServer

<PageTitle>Investimento</PageTitle>

<h1>Lista de investimentos</h1>




<table class="table">
    <thead>
        <tr>
            <th>Investimento</th>
            <th>Vencimento</th>
            <th>Categoria</th>
            <th>Risco</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var investimento in ListaInvestimentos )
        {
            <tr>
                <td>@investimento.Nome</td>
                <td>@investimento.Vencimento</td>
                <td>@investimento.Categoria</td>
                <td>@investimento.Risco</td>
                <td>
                    <a class="btn btn-info" href="investimento/extrato/@investimento.Id/@investimento.Nome">Extrato</a>
                    <a class="btn btn-info" href="investimento/posicao/@investimento.Id">Posição</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<a href="/investimento/create" class="btn btn-primary">Novo investimento</a>
<a href="/" class="btn btn-default">Voltar</a>

<br />

@if (mensagem != string.Empty)
{
    <label class="text text-info">@mensagem</label>
}
