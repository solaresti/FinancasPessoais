@page "/meta"
@using AppFinancas.Models
@rendermode InteractiveServer

<PageTitle>Metas</PageTitle>

<h1>Lista de metas</h1>




<table class="table">
    <thead>
        <tr>
            <th>Meta</th>
            <th>Data</th>
            <th><div align="right">Valor</div></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var meta in ListaMetas)
        {
            <tr>
                <td>@meta.Nome</td>
                <td>@meta.Data.ToString("dd/MM/yyyy")</td>
                <td align="right">@meta.Valor.ToString("C")</td>
                <td>
                    <a class="btn btn-info" href="meta/extrato/@meta.Id/@meta.Nome">Extrato</a>
                    <a class="btn btn-info" href="meta/posicao/@meta.Id">Posição</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<a href="/investimento/create" class="btn btn-primary">Nova meta</a>
<a href="/" class="btn btn-default">Voltar</a>

<br />

@if (mensagem != string.Empty)
{
    <label class="text text-info">@mensagem</label>
}
